<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LukeSignupLogin.Loginpage"
             Title="Loginpage">
    <VerticalStackLayout Spacing="20" HorizontalOptions="CenterAndExpand">
        <Label Text="Log In Page"
         VerticalOptions="Center" 
         HorizontalOptions="Center"
         FontAttributes="Bold"
        />

        <Entry x:Name="UsernameEntry" Placeholder="Enter User Name"/>
        <Entry x:Name="PassWordEntry" Placeholder="Enter Password" IsPassword="True"/>
        <Entry x:Name="EmailEntry" Placeholder="Enter Email"/>
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Go Back" Clicked="Return_Clicked"/>
            <Button Text="Log In" Clicked="Log_In_Clicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>