<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LukeSignupLogin.MVVM.Views.Signinpage">

    <VerticalStackLayout Spacing="20" HorizontalOptions="CenterAndExpand">
        <Label Text="Sign Up Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            />

        <Entry Text="{Binding Username}" Placeholder="Username" />
        <Entry Text="{Binding Email}" Placeholder="Email" />
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" />
        <Entry Text="{Binding ConfirmPassword}" Placeholder="Confirm Password" IsPassword="True" />

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Go Back" Clicked="Return_Clicked"/>
            <Button Text="Sign up" Clicked="Sign_in_Clicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>